!!! Strict
%html
  %head
    %meta{'http-equiv' => 'Content-Type', :content => 'text/html; charset=utf-8'}
    %title 
      ADC Archives
      
    = stylesheet_link_tag 'blueprint/screen'
    = stylesheet_link_tag 'blueprint/plugins/fancy-type/screen.css'
    = stylesheet_link_tag 'blueprint/print', :media => 'print'
    = stylesheet_link_tag 'screen'
    
    /[if IE]
      = stylesheet_link_tag 'blueprint/ie'
      = stylesheet_link_tag 'ie'
    
    = javascript_include_tag "http://ajax.googleapis.com/ajax/libs/jquery/1.3.2/jquery#{Rails.env == 'production' ? '.min' : ''}.js"
    = sprockets_include_tag
    = yield_authenticity_token
  
  %body
    .container
    
      #loginbar.span-24
        = render :partial => 'partials/login_bar'
    
      #header.span-24
    
        #title.span-14
          %h1 
            = link_to "adc<span>archives</span>", root_path
        
        #flashholder.span-10.last
    
          -# Display any flashed messages in a #flashholder div, in paragraphs
          -# with the class set to the flash type.
          - if flash.keys.any?
            - flash.each do |type, msg|
              %p{ :class => type }&= msg
      
      #navigation.span-24
        = render :partial => 'partials/navigation'
      
      - if show_sidebar?
      
        #main.span-18
          = yield
      
        #sidebar.span-5.prepend-1.last
          = yield :sidebar
      
      - else
        
        #main.span-24
          = yield
