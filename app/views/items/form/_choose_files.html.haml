- form_for @item do |f|

  = f.error_messages

  %dl
    %dt= f.label :item_files, 'Files to process'
    %dd= f.collection_select :item_files, ItemFile.find_unprocessed, :id, :basename, {}, {:multiple => true,:name => 'item[item_file_ids][]'}

    %dd.notes Please select the files you wish to process for this item. You can select multiple files by holding down 'Ctrl' (Win) or 'Cmd' (Mac) while clicking.

    %dt &nbsp;
    %dd.buttons
      %button{ :type => 'submit' }
        = icon 'tick'
        OK
